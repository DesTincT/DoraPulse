{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "node scripts/dev-run.mjs",
    "start": "node --env-file=.env --enable-source-maps dist/index.js",
    "start:dev": "tsx src/index.ts",
    "build": "npm run lint && npm run lint:fix && npm run format && tsc -p tsconfig.json",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "deploy": "powershell -ExecutionPolicy Bypass -File ./deploy.ps1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/static": "^8.3.0",
    "csv-parse": "^6.1.0",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "fastify-multipart": "^5.4.0",
    "fastify-plugin": "^5.1.0",
    "mongoose": "^9.0.1",
    "node-cron": "^4.2.1",
    "telegraf": "^4.16.3",
    "undici": "^7.16.0",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.2",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "husky": "^9.1.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "parserPreset": {
      "name": "@commitlint/config-conventional",
      "opts": {
        "noteKeywords": [
          "BREAKING CHANGE",
          "BREAKING CHANGES",
          "BREAKING"
        ]
      }
    },
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "build",
          "ci",
          "chore",
          "revert"
        ]
      ],
      "type-case": [
        2,
        "always",
        "lower-case"
      ],
      "scope-enum": [
        2,
        "always",
        [
          "api",
          "webapp",
          "infra",
          "repo"
        ]
      ],
      "scope-empty": [
        2,
        "never"
      ],
      "scope-case": [
        2,
        "always",
        "kebab-case"
      ],
      "subject-case": [
        2,
        "always",
        [
          "lower-case"
        ]
      ],
      "subject-full-stop": [
        2,
        "never",
        "."
      ],
      "header-max-length": [
        2,
        "always",
        72
      ],
      "body-leading-blank": [
        2,
        "always"
      ],
      "footer-leading-blank": [
        2,
        "always"
      ]
    }
  }
}
